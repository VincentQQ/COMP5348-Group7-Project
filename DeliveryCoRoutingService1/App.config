<configuration>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="routingConfiguration"
               name="System.ServiceModel.Routing.RoutingService">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost/routingservice/" />
          </baseAddresses>
        </host>
        <!-- Create the Routing Service endpoint -->
        <endpoint address="router"
                  binding="basicHttpBinding"
                  name="RoutingServiceEndpoint"
                  contract="System.ServiceModel.Routing.IRequestReplyRouter" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <!-- Set up the Routing Behavior -->
        <behavior name="routingConfiguration">
          <routing filterTableName="filterTable1" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <!-- Create the destination endpoints that we want to send to -->
    <client>
      <!-- Create a dummy endpoint that we know will be down -->
      <endpoint name="serveEndpoint1"
                address="net.tcp://localhost:9030/DeliveryService"
                binding="netTcpBinding"
                contract="*" />

      <endpoint name="serveEndpoint1mex"
                address="net.tcp://localhost:9030/DeliveryService/mex"
                binding="mexTcpBinding"
                contract="*" />

      <!-- create the backup service endpoint -->
      <endpoint name="serveEndpoint2"
                address="net.tcp://localhost:9090/DeliveryService"
                binding="netTcpBinding"
                contract="*" />

      <endpoint name="serveEndpoint2mex"
                address="net.tcp://localhost:9090/DeliveryService/mex"
                binding="mexTcpBinding"
                contract="*" />
    </client>
    <routing>
      <filters>
        <!-- Create a MatchAll filter which will catch all messages -->
        <filter name="MatchAllFilter1" filterType="MatchAll" />
        <filter name="MatchAllFilter2" filterType="MatchAll" />
      </filters>
      <filterTables>
        <!-- Set up the Routing Service's Message Filter Table -->
        <filterTable name="filterTable1">
          <!-- Add an entrty that maps the MatchAllMessageFilter to the dead destination -->
          <!-- If that endpoint is down, tell the Routing Service to try the endpoints -->
          <!-- Listed in the backupEndpointList -->
          <add filterName="MatchAllFilter1" endpointName="serveEndpoint1" backupList="backupEndpointList"/>
        </filterTable>
        <filterTable name="filterTable2">
          <!-- Add an entrty that maps the MatchAllMessageFilter to the dead destination -->
          <!-- If that endpoint is down, tell the Routing Service to try the endpoints -->
          <!-- Listed in the backupEndpointList -->
          <add filterName="MatchAllFilter2" endpointName="serveEndpoint1mex" backupList="backupEndpointmexList"/>
        </filterTable>
      </filterTables>


      <!-- Create the backup endpoint list -->
      <backupLists>
        <!--
            Add an endpoint list that contains the backup destination
        In this case, specify the real address of the service 
        In reality there could be multiple endpoints listed here.
        The Routing Service would try them in the order specified until
        it found one that worked.  If the router went through the entire
        list and couldn't find a working endpoint, it would report failure
        the same way it does when there is no functioning primary endpoint and 
        no defined backups.
        
        -->

        <backupList name="backupEndpointList">
          <add endpointName="serveEndpoint2" />
        </backupList>
        <backupList name="backupEndpointmexList">
          <add endpointName="serveEndpoint2mex" />
        </backupList>

      </backupLists>
    </routing>
  </system.serviceModel>
</configuration>
